<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="alizinha.c4q.nyc.onemorechance.BiographyClass">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/image_holder"
    android:src="@drawable/elvis"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_elvis"
        android:layout_below="@+id/image_holder"
        android:layout_marginTop="10dp"
        android:text="Elvis Boves"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/bio_elvis"
        android:layout_below="@+id/name_elvis"
        android:layout_marginTop="25dp"
        android:textSize="15sp"/>

</RelativeLayout>
